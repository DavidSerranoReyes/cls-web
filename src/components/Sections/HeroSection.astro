---
import type { Language } from '../../types';
import { t } from '../../locales';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
---

<section class="relative w-full h-screen bg-gradient-to-b from-black to-[#1a1a1a] flex items-center justify-center overflow-hidden">
  <!-- Animated background gradient -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-96 h-96 bg-[#ff6b35] rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-[#ffa500] rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-pulse"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 text-center max-w-4xl mx-auto px-4 md:px-8">
    <div class="mb-6 inline-block">
      <span class="inline-block px-4 py-1 bg-[#ff6b35]/10 border border-[#ff6b35]/30 rounded-full text-[#ff6b35] text-sm font-semibold">
        {lang === 'en' ? 'Welcome to CLS Films' : 'Bienvenido a CLS Films'}
      </span>
    </div>

    <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold mb-6 leading-tight font-display tracking-tight">
      <span class="text-transparent bg-gradient-to-r from-[#ff6b35] via-white to-[#ffa500] bg-clip-text">
        {t(lang, 'home.hero.title')}
      </span>
    </h1>

    <p class="text-lg md:text-xl text-[#b0b0b0] mb-12 max-w-2xl mx-auto leading-relaxed">
      {t(lang, 'home.hero.subtitle')}
    </p>

    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a
        href={`/${lang}/portfolio`}
        class="px-8 py-4 bg-[#ff6b35] hover:bg-[#ffa500] text-black font-semibold transition-all duration-300 transform hover:scale-105"
      >
        {lang === 'en' ? 'Explore Work' : 'Explorar Trabajo'}
      </a>
      <a
        href={`/${lang}/contact`}
        class="px-8 py-4 border-2 border-[#ff6b35] text-white hover:bg-[#ff6b35] hover:text-black font-semibold transition-all duration-300"
      >
        {lang === 'en' ? 'Get In Touch' : 'Ponerse en Contacto'}
      </a>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-[#ff6b35]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>
