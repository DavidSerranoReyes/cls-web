---
import Layout from '../components/Layout.astro';
import type { Language } from '../types';

const lang: Language = 'en';
---

<Layout title="404 - Page Not Found" lang={lang}>
  <div class="min-h-screen pt-32 pb-20 flex items-center justify-center">
    <div class="text-center max-w-2xl mx-auto px-4">
      <h1 class="text-7xl md:text-9xl font-bold mb-6">
        <span class="text-transparent bg-gradient-to-r from-[#ff6b35] to-[#ffa500] bg-clip-text">
          404
        </span>
      </h1>

      <h2 class="text-3xl md:text-5xl font-bold mb-4 text-white">
        Page Not Found
      </h2>

      <p class="text-[#b0b0b0] text-lg mb-12">
        The page you're looking for doesn't exist or has been moved.
      </p>

      <a
        href="/en"
        class="inline-block px-8 py-4 bg-[#ff6b35] hover:bg-[#ffa500] text-black font-semibold transition-all duration-300 transform hover:scale-105"
      >
        Return to Home
      </a>
    </div>
  </div>
</Layout>
